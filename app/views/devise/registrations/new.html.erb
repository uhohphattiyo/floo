<div>
  <div class="panel-body">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	<div class="form-group">
	  <%= f.label :name, :class => "label-color" %><br />
	  <%= f.text_field :name, autofocus: true %>
	</div>

	<div class="form-group">
	  <%= f.label :email, :class => "label-color" %><br />
	  <%= f.email_field :email, autofocus: true %>
	</div>

	<div class="form-group">
	 <%= f.label :password, :class => "label-color"  %><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	</div>
	
	<div class="form-group">
  	<%= f.label :password_confirmation, :class => "label-color"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
	</div>

	<div class="form-group">
	  <%= f.label :birthdate, :class => "label-color" %><br />
	  <%= f.date_select :birthdate, :start_year=>1920, :end_year=>2001 %>
	  <p>You must be over 13 years old to sign up.  </p>
      <p>You agree you are of legal drinking age in your country if you access any alcohol related portions.</p>
	</div>

	
	<div class="form-group">
	  <%= f.label :gender, :class => "label-color" %><br />
	  <%= f.select :gender, ['female', 'male', 'other'] %>
	</div>

	<div class="form-group">
  		<%= f.submit "Sign up", :class => "btn btn-default"  %>
  	</div>
	
	<% end %>
  </div>

  <div class="panel-footer">
	<%= render "devise/shared/links" %>
  </div>
</div>
