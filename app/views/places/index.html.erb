<div itemscope itemtype="http://schema.org/FoodEstablishment">
<div id="places" class="transitions-enabled">
<% @places.each do |place| %>     
    <div class="box panel panel-default">
        <span itemprop="photo"><%= link_to image_tag(place.image.url(:medium)), place %></span>
        
        <div class="panel-body text-center">                 
            <p>
            <!-- <%= ["$", "$$", "$$$"][place.budget_id] %> -->
            <span itemprop="name"><%= place.name %></span>
            </p>
            <p>
            <span itemprop="servesCuisine"><%= ["beer", "chocolate" ,"cocktail", "coffee", "tea", "wine"] [place.kind] %></span>
            </p>
            
           <% if place.admin_user == current_admin_user %>
            <div class="actions">
                <%= link_to 'Edit', edit_place_path(place) %>
                <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
            <% end %>
        </div>


    </div>
<% end %>
</div>
</div>

